{
	"tasks": {
		"start": "deno run --allow-read --allow-net --allow-env main.ts",
		"dev": "deno run --watch --allow-read --allow-net --allow-env main.ts"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve"
	}
}
